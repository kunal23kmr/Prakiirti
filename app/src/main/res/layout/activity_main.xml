<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:backgroundTint="#A1BEF1F8"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_main_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#A1BEF1F8"
        tools:listitem="@layout/user_recycle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_blog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_edit"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="642dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:elevation="15dp"
        android:outlineSpotShadowColor="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/todo"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>